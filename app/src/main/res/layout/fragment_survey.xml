<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.ole.planet.takeout.survey.SurveyFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@color/colorPrimary"
            android:gravity="right"
            android:padding="@dimen/padding_large">

            <TextView
                android:id="@+id/tv_submit_new_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="?attr/selectableItemBackground"
                android:drawableLeft="@drawable/ic_add_library"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:text="@string/submit_new_entry"
                android:textColor="@drawable/tv_color"
                android:textSize="@dimen/text_size_mid" />


        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/recycler"
            android:layout_height="0dp"
            android:layout_weight="1"/>


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/tv_message"
        android:layout_height="wrap_content" />
</FrameLayout>
